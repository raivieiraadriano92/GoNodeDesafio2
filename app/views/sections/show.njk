{% extends 'layouts/default.njk' %}

{% block body %}
  <div class="wrapper">
    {% include 'partials/header.njk' %}

    <section id="main">
      <div class="container">
        {% include 'partials/subheader.njk' %}

        <section id="content">
          {% include 'partials/nav.njk' %}

          <article>
            <div class="project-header">
              <h1>{{ currentSection.title }}</h1>
              <form id="deleteSection" action="/app/projects/{{ project.id }}/sections/{{ currentSection.id }}?_method=DELETE" method="POST"></form>
              <a href="javascript://" onClick="document.getElementById('deleteSection').submit()">Remover seção</a>
              <a href="/app/projects/{{ project.id }}/sections/{{ currentSection.id }}/edit">Editar seção</a>
            </div>
            <p>{{ currentSection.content }}</p>
          </article>
        </section>
      </div>
    </section>
  </div>
{% endblock %}
