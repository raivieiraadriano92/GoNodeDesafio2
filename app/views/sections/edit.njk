{% extends 'layouts/default.njk' %}

{% block body %}
  <div class="wrapper">
    {% include 'partials/header.njk' %}

    <section id="main">
      <div class="container">
        {% include 'partials/subheader.njk' %}

        <section id="content">
          {% include 'partials/nav.njk' %}

          <article>
            <form class="edit" method="POST" action="/app/projects/{{ project.id }}/sections/{{currentSection.id}}?_method=PUT">
              <input type="text" name="title" value="{{ currentSection.title }}">
              <div class="content-container">
                <textarea name="content" class="mde" placeholder="Conteúdo da seção">{{ currentSection.content }}</textarea>
              </div>
              <button type="submit" class="btn">SALVAR</button>
              <a href="/app/projects/{{ project.id }}/sections/{{currentSection.id}}" class="btn btn-danger">CANCELAR</a>
            </form>
          </article>
        </section>
      </div>
    </section>
  </div>
{% endblock %}
